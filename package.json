{
  "name": "electron-react-typescript",
  "version": "1.0.0",
  "description": "A Boilerplate Project for Electron.js, React and TypeScript",
  "main": "./public/electron.js",
  "scripts": {
    "build:react": "react-scripts build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "prebuild": "npm run copyassets",
    "build": "npm run build:react && npm run build:electron",
    "copyassets": "node ./build-scripts/copyassets.js",
    "prestart": "npm run copyassets && npm run build:electron",
    "start": "concurrently \"cross-env BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "start:react": "react-scripts start",
    "test": "npm run lint",
    "lint": "eslint \"./**/*.{tsx,ts,js}\"",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "pack:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run pack",
    "predist": "npm run build",
    "dist": "electron-builder",
    "dist:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist",
    "eject": "react-scripts eject",
    "prepare": "husky install"
  },
  "build": {
    "productName": "ElectronReactTypeScript",
    "copyright": "Copyright Â© 2021 Alex Seifert",
    "appId": "com.alexseifert.electronReactTypeScript",
    "buildDependenciesFromSource": true,
    "files": [
      "!*.code-workspace",
      "!.github",
      "!.husky",
      "!.vscode",
      "!build-scripts",
      "build"
    ],
    "directories": {
      "buildResources": "build-resources"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "entitlements": "build-resources/entitlements.mac.plist",
      "type": "development",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-resources/icon.ico"
    }
  },
  "repository": "https://github.com/eiskalteschatten/electron-react-typescript.git",
  "keywords": [],
  "author": {
    "name": "Alex Seifert",
    "email": "alex@alexseifert.com"
  },
  "homepage": "./",
  "license": "",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "concurrently": "^6.4.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^7.11.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.27.1",
    "husky": "^7.0.4",
    "node-sass": "^6.0.1",
    "typescript": "^4.5.3",
    "wait-on": "^6.0.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "clsx": "^1.1.1",
    "electron-log": "^4.4.1",
    "i18next": "^21.6.0",
    "react": "^17.0.2",
    "react-bootstrap": "^2.0.3",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.14.3",
    "react-intl": "^5.23.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "react-scripts": "^4.0.3",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1"
  }
}
